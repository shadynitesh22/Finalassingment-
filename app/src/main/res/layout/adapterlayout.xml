<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
      android:id="@+id/adapter"
        android:backgroundTint="@color/one"
        android:layout_width="match_parent"
        android:layout_height="300dp" >
        <de.hdodenhof.circleimageview.CircleImageView
            android:backgroundTint="@color/teal_700"
            android:id="@+id/postedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="350dp"
            app:srcCompat="@drawable/add"

            />
        <ImageButton
            android:backgroundTint="@color/design_default_color_error"
            android:id="@+id/postdel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/del"
            android:layout_marginLeft="350dp"

            />
        <ImageButton
            android:backgroundTint="@color/purple_200"
            app:srcCompat="@drawable/home"
            android:id="@+id/postadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="350dp"

            />
        <ImageView

            android:id="@+id/postimg"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="25dp"

            />
        <TextView
            android:id="@+id/postname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:fontFamily="@font/cinzel"
            />
        <TextView
            android:id="@+id/postprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prize:"
            android:textSize="16sp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/cinzel"
            />
        <TextView
            android:id="@+id/postlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Location:"
            android:textSize="16sp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/cinzel"
            />
        <TextView
            android:id="@+id/postlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Likes:"
            android:textSize="16sp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="@font/cinzel"
            />
        <TextView
            android:id="@+id/postrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Rating:"
            android:textSize="16sp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="300dp"
            android:fontFamily="@font/cinzel"
            />
        <Button
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/cinzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textSize="16sp"
            android:layout_marginTop="250dp"

            />
        <Button
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/cinzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textSize="16sp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="300dp"

            />

    </androidx.cardview.widget.CardView>


</LinearLayout>